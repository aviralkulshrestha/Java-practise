public class checkNumber {
    public static void check(int number) {
        if (number > 0) {
            System.out.println("Positive");
        } else if (number < 0)
        {     System.out.println("Negative");}
        else
        {System.out.println("Zero");}
    }
    public static void main(String[] args){
        check(0);
    }
}
